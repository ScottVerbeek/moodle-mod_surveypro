{{!
    @template mod_surveypro/view_action_bar

    Actions bar at the top of the view pages in the surveypro activity.

    Context variables required for this preset:
    * urlselect - The surveypro object containing the required properties to render core/url_select.
    * actionsselect - The presets actions selector.

    Example context (json):
    {
        "urlselect": {
            "id": "url_select_test",
            "action": "https://example.com/post",
            "formid": "url_select_form",
            "sesskey": "sesskey",
            "classes": "urlselect",
            "label": "",
            "helpicon": false,
            "showbutton": null,
            "options": [
                {
                    "name": "List view",
                    "value": "/mod/surveypro/someurl.php",
                    "selected": false
                },
                {
                    "name": "Single view",
                    "value": "/mod/surveypro/someurl.php",
                    "selected": true
                }
            ],
            "disabled": false,
            "title": null
        }
    }
}}
<div class="container-fluid tertiary-navigation d-flex">
    <div class="row ml-auto">
        <div class="col">
            {{#urlselect}}
                <div class="navitem mb-0">
                    {{>core/url_select}}
                </div>
            {{/urlselect}}
        </div>
    </div>
</div>
<hr/>
